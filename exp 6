        cin >> name; // Staff's name
        cout << "Enter dept id: " << endl;
        cin >> dept_id;
    }
    
    void displayStaff(string college_name) {
        cout << "College: " << college_name << endl;
        cout << "Emp name: " << emp_name << endl; // Inherited from Employee
        cout << "ID: " << id << endl;             // Inherited from Employee
        cout << "Staff Name: " << name << endl;
        cout << "Department ID: " << dept_id << endl;
    }
};

