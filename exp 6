#include <iostream>
#include <string>
using namespace std;

// Base Class 1
class Department {
protected:
    string dname;
};

// Base Class 2
class Student {
protected:
    string sname;
    int roll;
};

// Derived Class (inherits from Department AND Student)
class Marks : protected Department, protected Student {
private:
    int m1, m2;
    int percentage; // The handwritten code uses 'int' for percentage.

public:
    void accept() {
        cout << "Enter department: " << endl;
        cin >> dname; // Accesses protected member from Department
        cout << "Enter name: " << endl;
        cin >> sname; // Accesses protected member from Student
        cout << "Enter marks 1: " << endl;
        cin >> m1;
        cout << "Enter marks 2: " << endl;
        cin >> m2;
    }

    void calculate() {
        // Simple average calculation
        percentage = (m1 + m2) / 2;

        cout << "Department: " << dname << endl;
        cout << "Name: " << sname << endl;
        cout << "Percentage: " << percentage << endl;
    }
};

int main() {
    Marks m;

    m.accept();
    m.calculate();

    return 0;
}


#include <iostream>
#include <string>
using namespace std;

// Base Class
class Person {
protected:
    string name;
    int age;
    
public:
    void acceptPer() {
        cout << "Enter name: " << endl;
        cin >> name;
        cout << "Enter age: " << endl;
        cin >> age;
    }
};

// Derived Class 1 (inherits from Person)
class Student : public Person {
private:
    int roll;
    float per;

public:
    void acceptStud() {
        // Accepts Student-specific data
        cout << "Enter roll number: " << endl;
        cin >> roll;
        cout << "Enter Percentage: " << endl;
        cin >> per;
    }

    void displayStud() {
        cout << "--- Student Data ---" << endl;
        cout << "Name: " << name << endl;  // Inherited from Person
        cout << "Age: " << age << endl;    // Inherited from Person
        cout << "Roll No.: " << roll << endl;
        cout << "Percentage: " << per << endl;
    }
};

// Derived Class 2 (inherits from Person)
class Staff : public Person {
private:
    int emp_id;
    string subject;

public:
    void acceptStaff() {
        // Accepts Staff-specific data
        cout << "Enter employee ID: " << endl;
        cin >> emp_id;
        cout << "Enter subject: " << endl;
        cin >> subject;
    }

    void displayStaff() {
        cout << "--- Staff Data ---" << endl;
        cout << "Name: " << name << endl; // Inherited from Person
        cout << "Age: " << age << endl;   // Inherited from Person
        cout << "Emp ID: " << emp_id << endl;
        cout << "Subject taught: " << subject << endl;
    }
};

int main() {
    Student s;
    Staff t;

    // Accept Person data for Student
    s.acceptPer();
    // Accept Student data
    s.acceptStud();

    // Accept Person data for Staff
    t.acceptPer();
    // Accept Staff data
    t.acceptStaff();

    // Display data
    s.displayStud();
    t.displayStaff();

    return 0;
}



#include <iostream>
#include <string>
using namespace std;

// Base Class A
class College {
protected:
    string cname;
};

// Implied Base Class B (not fully defined in snippet, assuming it exists)
class Employee {
protected:
    string emp_name;
    int id;
public:
    // Accept function that reads College data (demonstrates access)
    void acceptEmp(string &college_name) {
        cout << "Enter College name: " << endl;
        cin >> college_name;
        cout << "Enter Emp name: " << endl;
        cin >> emp_name;
        cout << "Enter ID: " << endl;
        cin >> id;
    }

    void displayEmp() {
        // College name display would need to be passed or accessed via inheritance
        // Using placeholders based on the snippet's logic:
        // cout << "College: " << cname << endl; // cname is protected in College
        cout << "Emp name: " << emp_name << endl;
        cout << "ID: " << id << endl;
    }
};

// Derived Class 1 (Inherits from College) - Represents the Hierarchical/Multilevel part
class Student : protected College {
private:
    string stu_name;
    int roll;

public:
    void acceptStud() {
        cout << "Enter College name: " << endl;
        cin >> cname; // Accesses protected member from College
        cout << "Enter student name: " << endl;
        cin >> stu_name;
        cout << "Enter roll number: " << endl;
        cin >> roll;
    }

    void displayStud() {
        cout << "College: " << cname << endl;
        cout << "Student name: " << stu_name << endl;
        cout << "Roll Number: " << roll << endl;
    }
};

// Derived Class 2 (Inherits from Employee) - Used with another base class for Multiple/Hybrid
// NOTE: The handwritten snippet's Staff class inherits from Employee, but also contains functions
// that ask for College name (cname), suggesting it should either inherit from College or have
// a complex access mechanism not fully visible. I'm reconstructing based on the visible parts:

