#include <iostream>
#include <string>
using namespace std;

// Base Class 1
class Department {
protected:
    string dname;
};

// Derived Class 1 (inherits from Department)
class Student : protected Department {
protected:
    string sname;
    int roll;
};

// Derived Class 2 (inherits from Student, implementing Multilevel Inheritance)
class Marks : protected Student {
private:
    int m1, m2;
    int percentage; // The handwritten code uses 'int' for percentage.

public:
    void accept() {
        cout << "Enter department: " << endl;
        cin >> dname; // Accesses protected member from Department via Student
        cout << "Enter name: " << endl;
        cin >> sname; // Accesses protected member from Student
        cout << "Enter marks 1: " << endl;
        cin >> m1;
        cout << "Enter marks 2: " << endl;
        cin >> m2;
    }

    void calculate() {
        // Simple average calculation, using integer division for percentage as per snippet
        percentage = (m1 + m2) / 2;

        cout << "Department: " << dname << endl;
        cout << "Name: " << sname << endl;
        cout << "Percentage: " << percentage << endl;
    }
};

int main() {
    Marks m;

    m.accept();
    m.calculate();

    return 0;
}
